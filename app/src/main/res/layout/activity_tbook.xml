<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddBook">

    <!-- Avatar -->
    <ImageView
        android:id="@+id/avatar"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@mipmap/ic_launcher"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp" />

    <!-- Input Name -->
    <EditText
        android:id="@+id/edit_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/avatar"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Name" />

    <!-- Nama Panggilan -->
    <EditText
        android:id="@+id/edit_namaPanggilan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_name"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Nama Panggilan" />

    <!-- Email -->
    <EditText
        android:id="@+id/edit_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_namaPanggilan"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Email" />

    <!-- Alamat -->
    <EditText
        android:id="@+id/edit_alamat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_email"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Alamat" />

    <!-- Tanggal Lahir -->
    <EditText
        android:id="@+id/edit_tglLahir"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_alamat"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="Tanggal Lahir"
        android:focusable="false" />

    <!-- No HP -->
    <EditText
        android:id="@+id/edit_noHp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_tglLahir"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        android:hint="No HP" />

    <!-- Submit Button -->
    <Button
        android:id="@+id/btn_submit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_noHp"
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:text="Submit" />

    <!-- Edit Button (Hidden by Default) -->
    <Button
        android:id="@+id/btn_edit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_submit"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:text="Edit"
        android:visibility="gone" />

    <!-- Display Button -->
    <Button
        android:id="@+id/btn_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/btn_submit"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:text="Display" />

</RelativeLayout>
